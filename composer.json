{
    "name": "mf/faces",
    "description": "Faces App",
    "type": "project",
    "version": "1.6.0",
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.0",
        "kriswallsmith/buzz": "^1.3",
        "lmc/cqrs-handler": "^2.0",
        "lmc/cqrs-http": "^3.0",
        "mf/collections-php": "^7.1",
        "nyholm/psr7": "^1.4",
        "symfony/http-foundation": "^7.3"
    },
    "require-dev": {
        "almacareer/coding-standard": "^4.2",
        "ergebnis/composer-normalize": "^2.28",
        "mockery/mockery": "^1.0",
        "php-mock/php-mock-mockery": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-mockery": "1.1.1",
        "phpstan/phpstan-phpunit": "1.3.15",
        "phpunit/phpunit": "^9.5.20"
    },
    "autoload": {
        "psr-4": {
            "MF\\Faces\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\Faces\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "all": [
            "@analyze",
            "@phpstan",
            "@phpstanDeployment",
            "@test"
        ],
        "analyze": [
            "@cs",
            "@lint"
        ],
        "cs": [
            "bin/ecs check --ansi"
        ],
        "fix": [
            "@composer normalize",
            "bin/ecs check --ansi --clear-cache --fix"
        ],
        "lint": [
            "@composer validate",
            "@composer normalize --dry-run",
            "bin/parallel-lint -j 10 -e php ./src/php ./tests ecs.php"
        ],
        "phpstan": "bin/phpstan analyze -l 8 -c phpstan.neon src tests",
        "phpstan-src": "bin/phpstan analyze -l 8 -c phpstan.neon src",
        "phpstan-tests": "bin/phpstan analyze -l 8 -c phpstan.neon tests",
        "start": "php -S localhost:8080 -t src",
        "start-1": "php -S localhost:8081 -t src",
        "start-2": "php -S localhost:8082 -t src",
        "test": "bin/phpunit -c phpunit.xml.dist",
        "test-ci": "mkdir -p reports && php -dxdebug.coverage_enable=1 bin/phpunit -c phpunit.xml.dist --exclude-group local --exclude-group integration"
    }
}
